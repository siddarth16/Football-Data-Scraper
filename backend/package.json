{
  "name": "football-predictions-api",
  "version": "1.0.0",
  "description": "Autonomous football betting prediction API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --skipLibCheck",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "update-data": "node scripts/update-data.js",
    "generate-predictions": "node scripts/generate-predictions.js",
    "postinstall": "npm run build"
  },
  "keywords": ["football", "predictions", "betting", "api"],
  "author": "Football Predictions Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "@supabase/supabase-js": "^2.38.4",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.4",
    "@types/compression": "^1.7.5",
    "@types/lodash": "^4.14.202",
    "@types/node-cron": "^3.0.11",
    "@types/helmet": "^4.0.0",
    "@types/joi": "^17.2.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 